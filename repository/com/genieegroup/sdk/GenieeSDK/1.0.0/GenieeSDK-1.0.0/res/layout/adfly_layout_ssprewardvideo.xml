<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">
    <com.adfly.sdk.rewardedvideo.VideoTextureView
        android:id="@+id/texture_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />
    <ProgressBar
        android:id="@+id/load_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <ProgressBar
        android:id="@+id/play_progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_gravity="bottom"
        android:progress="0"
        android:progressDrawable="@drawable/adfly_video_player_progress"
        android:visibility="gone"
        tools:progress="50" />
    <ImageView
        android:id="@+id/cover_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone"/>
    <TextView android:id="@+id/timer_tv"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:padding="3dp"
        android:minWidth="28dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:layout_gravity="top|right"
        android:background="@drawable/adfly_round_bg"
        android:visibility="gone"/>

    <ImageView android:id="@+id/jump_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="top|right"
        android:scaleType="centerInside"
        android:gravity="center"
        android:background="@drawable/adfly_round_bg"
        android:src="@mipmap/adfly_jump_icon"
        android:visibility="gone"/>
    <ImageView android:id="@+id/close_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="top|right"
        android:scaleType="centerInside"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/adfly_btn_channel_del"
        android:visibility="gone"/>

    <ImageView android:id="@+id/mute_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|left"
        android:scaleType="centerInside"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:src="@mipmap/adfly_ic_mute_on"
        android:visibility="gone"/>


</FrameLayout>