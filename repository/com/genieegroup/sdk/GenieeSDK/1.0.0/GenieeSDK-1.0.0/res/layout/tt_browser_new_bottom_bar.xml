<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tt_bottom_bar"
    android:layout_width="match_parent"
    android:layout_height="44.5dp"
    android:layout_alignParentBottom="true"
    android:layout_centerVertical="true"
    android:background="#FFFFFF"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#1F161823" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tt_bottom_bar_back"
            android:layout_width="40dp"
            android:layout_height="44dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="14.75dp"
            android:paddingTop="12.5dp"
            android:paddingRight="14.75dp"
            android:paddingBottom="12.5dp"
            android:src="@drawable/tt_ad_arrow_backward" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/tt_bottom_bar_forward"
            android:layout_width="40dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="14.75dp"
            android:paddingTop="12.5dp"
            android:paddingRight="14.75dp"
            android:paddingBottom="12.5dp"
            android:src="@drawable/tt_ad_arrow_forward" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/tt_bottom_bar_refresh"
            android:layout_width="40dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="10dp"
            android:paddingTop="12dp"
            android:paddingRight="10dp"
            android:paddingBottom="12dp"
            android:src="@drawable/tt_ad_refresh" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/tt_bottom_bar_go_to_browser"
            android:layout_width="40dp"
            android:layout_height="44dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:paddingLeft="9dp"
            android:paddingTop="11dp"
            android:paddingRight="9dp"
            android:paddingBottom="11dp"
            android:src="@drawable/tt_ad_link" />
    </LinearLayout>
</LinearLayout>