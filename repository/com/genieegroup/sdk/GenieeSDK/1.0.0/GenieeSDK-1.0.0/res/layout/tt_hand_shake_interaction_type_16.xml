<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tt_hand_container"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tt_splash_rock_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/tt_splash_rock" />
    </LinearLayout>

    <TextView
        android:id="@+id/tt_splash_rock_top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_gravity="center"
        android:text="@string/tt_splash_rock_top_text"
        android:textColor="@android:color/white"
        android:shadowColor="#99000000"
        android:shadowRadius="4"
        android:shadowDx="3"
        android:shadowDy="3"
        android:layout_marginTop="12dp"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tt_splash_rock_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:shadowColor="#99000000"
        android:shadowRadius="4"
        android:shadowDx="3"
        android:shadowDy="3"
        android:textSize="14dp"
        android:text="@string/tt_splash_rock_text"
        android:textColor="@android:color/white" />


</LinearLayout>