<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tt_title_bar"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="#ffffff"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/tt_title_bar_close"
        android:layout_width="40dp"
        android:layout_height="44dp"
        android:clickable="true"
        android:focusable="true"
        android:paddingLeft="12dp"
        android:paddingTop="14dp"
        android:paddingRight="12dp"
        android:paddingBottom="14dp"
        android:src="@drawable/tt_ad_xmark" />

    <TextView
        android:id="@+id/tt_title_bar_title"
        android:layout_width="191dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/tt_title_bar_feedback"
        android:layout_toLeftOf="@+id/tt_title_bar_feedback"
        android:layout_toEndOf="@+id/tt_title_bar_close"
        android:layout_toRightOf="@+id/tt_title_bar_close"
        android:ellipsize="marquee"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="#222222"
        android:textSize="17sp"
        tools:text="标题栏" />


    <ImageView
        android:id="@+id/tt_title_bar_feedback"
        android:layout_width="40dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="8dp"
        android:paddingTop="10dp"
        android:paddingRight="8dp"
        android:paddingBottom="10dp"
        android:src="@drawable/tt_ad_feedback" />

    <ProgressBar
        android:id="@+id/tt_title_bar_browser_progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:progress="1"
        android:progressDrawable="@drawable/tt_privacy_progress_style" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#1F161823" />
</RelativeLayout>
