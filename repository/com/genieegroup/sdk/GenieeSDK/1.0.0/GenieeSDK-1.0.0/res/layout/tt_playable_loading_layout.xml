<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#000000">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="53dp"
            android:scaleType="fitXY"
            android:background="@drawable/tt_pangle_logo_white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/tt_playable_pb_view"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="80dp"
                android:layout_height="3dp"
                android:progress="1"
                android:progressDrawable="@drawable/tt_playable_progress_style"
                tools:progress="60" />

            <TextView
                android:id="@+id/tt_playable_progress_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#EEEEEE"
                android:textSize="12sp"
                tools:text="66%" />

        </LinearLayout>

        <TextView
            android:id="@+id/tt_playable_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:background="@drawable/tt_playable_btn_bk"
            android:clickable="true"
            android:paddingLeft="24dp"
            android:paddingTop="8dp"
            android:maxLines="1"
            android:paddingRight="24dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:ellipsize="end"
            android:text="@string/tt_try_now"
            android:textColor="#EEEEEE"
            android:textSize="14sp" />

    </LinearLayout>

</FrameLayout>