<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/type11or12_pop_c"
    android:background="#7f000000">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:orientation="vertical"
        android:layout_gravity="center">
        <com.adfly.sdk.core.widget.RoundImageView
            android:id="@+id/app_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"/>

        <TextView android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="@android:color/white"
            tools:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"/>

        <TextView android:id="@+id/desc_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#CCFFFFFF"
            tools:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp">
            <TextView android:id="@+id/down_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/adfly_bg_rewardvideo_pop_btn3"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="17dp"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                tools:text= "aaaaaaaaaa"/>
            <ImageView
                android:layout_width="46dp"
                android:layout_height="56dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="24dp"
                android:layout_marginRight="31dp"
                android:src="@mipmap/adfly_rewarded_guide_icon"/>
        </RelativeLayout>
    </LinearLayout>
    <ImageView android:id="@+id/type12_mid_close_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="top|right"
        android:layout_marginTop="46dp"
        android:layout_marginRight="16dp"
        android:src="@mipmap/adfly_rewardedvideo_end_pop_close_icon"/>
</FrameLayout>